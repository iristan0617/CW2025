<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane fx:controller="com.comp2042.GuiController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@window_style.css">

    <!-- Top: Game Title -->
    <top>
        <Pane prefHeight="100">
            <Label text="Tetris" styleClass="title"
                   layoutX="700" layoutY="30"/>
        </Pane>
    </top>

    <!-- Center: Main Game Area with External Displays -->
    <center>
        <HBox alignment="CENTER" spacing="40"  translateX="45" >
            <!-- Left: Score and Lines (External) -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="SCORE:" styleClass="stats-label"/>
                    <Label fx:id="scoreLabel" text="0" styleClass="score-display"/>
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="LINES:" styleClass="stats-label"/>
                    <Label fx:id="linesLabel" text="0" styleClass="lines-display"/>
                </VBox>
            </VBox>

            <!-- Center: Game Board -->
            <VBox alignment="CENTER" spacing="10">
                <StackPane>
                    <Pane styleClass="gameBoard" fx:id="gameBoard">
                        <GridPane fx:id="gamePanel" hgap="1" vgap="1"/>
                    </Pane>
                    <!-- Brick panel for current falling piece -->
                    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
                    <!-- Game Over Panel inside the game board -->
                    <GameOverPanel fx:id="gameOverPanel" visible="false"/>
                </StackPane>
            </VBox>

            <!-- Right: Next Piece (External) -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 50;">
                <Label text="NEXT" styleClass="stats-label"/>
                <Pane styleClass="next-piece-container">
                    <GridPane fx:id="nextBrickPanel" vgap="1" hgap="1"/>
                </Pane>
            </VBox>
        </HBox>
    </center>

    <!-- Bottom: Control Buttons -->
    <bottom>
        <Pane prefHeight="80">
            <Button text="New Game" onAction="#newGame" styleClass="button"
                    layoutX="600" layoutY="10"/>  <!-- More left -->
            <Button text="Pause" onAction="#togglePause" styleClass="button"
                    layoutX="750" layoutY="10"/> <!-- Middle -->
            <Button text="Quit" onAction="#quitGame" styleClass="button"
                    layoutX="870" layoutY="10"/> <!--Right -->
        </Pane>
    </bottom>

    <!-- Notification Group -->
    <Group fx:id="groupNotification"/>

    <!-- Centered Pause Overlay - FIXED POSITIONING -->
    <Pane fx:id="pauseOverlay" visible="false">
        <Rectangle width="10000" height="10000" fill="rgba(0,0,0,0.8)"/>
        <VBox alignment="CENTER" spacing="20"
              layoutX="550" layoutY="300"
              style="-fx-background-color: rgba(0,0,0,0.9); -fx-padding: 40; -fx-background-radius: 10;">
            <Label text="PAUSED"
                   style="-fx-font-size: 48; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 10, 0.5, 0, 0);"/>
            <Label text="Press P to Resume"
                   style="-fx-font-size: 20; -fx-text-fill: lightgray;"/>
            <HBox spacing="15" alignment="CENTER">
                <Button text="Resume" onAction="#resumeGame"
                        style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="New Game" onAction="#newGame"
                        style="-fx-font-size: 16; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Quit" onAction="#quitGame"
                        style="-fx-font-size: 16; -fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </Pane>

</BorderPane>