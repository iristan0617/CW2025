<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
        <right>
            <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">
                <Label text="NEXT" style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <GridPane fx:id="nextBrickPanel" vgap="1" hgap="1" style="-fx-background-color: rgba(0,0,0,0.3); -fx-padding: 5;"/>
                <VBox spacing="5" alignment="CENTER">
                    <Label text="SCORE" style="-fx-font-size: 14; -fx-text-fill: white;"/>
                    <Label fx:id="scoreLabel" text="0" style="-fx-font-size: 18; -fx-text-fill: yellow; -fx-font-weight: bold;"/>
                </VBox>
            </VBox>
        </right>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <Group fx:id="pauseOverlay" visible="false">
        <Rectangle width="300" height="510" fill="rgba(0,0,0,0.7)"/>
        <VBox alignment="CENTER" spacing="20" layoutX="150" layoutY="255" translateX="-150" translateY="-100">
            <Label text="PAUSED" style="-fx-font-size: 36; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label text="Press P to Resume" style="-fx-font-size: 18; -fx-text-fill: lightgray;"/>
            <HBox spacing="15" alignment="CENTER">
                <Button text="Resume" onAction="#resumeGame" style="-fx-font-size: 14;"/>
                <Button text="New Game" onAction="#newGame" style="-fx-font-size: 14;"/>
                <Button text="Quit" onAction="#quitGame" style="-fx-font-size: 14;"/>
            </HBox>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</Pane>